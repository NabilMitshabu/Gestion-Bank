<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankapp.HelloController">
    <children>
        <Label text="Rechercher des comptes par type" />
        <TextField fx:id="typeRechercheField" promptText="Entrez le type de compte" />
        <Button text="Rechercher" onAction="#rechercherCompteType" />

        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="numeroCompteColumn" text="Numéro de Compte" />
                <TableColumn fx:id="titulaireColumn" text="Titulaire" />
                <TableColumn fx:id="soldeColumn" text="Solde" />
                <TableColumn fx:id="typeColumn" text="Type" />
                <TableColumn fx:id="decouvertAutoriseColumn" text="Découvert Autorisé" />
                <TableColumn fx:id="tauxColumn" text="Taux" />
            </columns>
        </TableView>
    </children>
</VBox>

